{
  "id": "upload",
  "type": "object",
  "required": ["files", "meta", "username"],
  "properties": {
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "anyOf": [
          {
            "$ref": "common#/definitions/cappasity-binary"
          },
          {
            "$ref": "common#/definitions/cappasity-image"
          },
          {
            "$ref": "common#/definitions/cappasity-archive"
          }
        ]
      }
    },
    "meta": {
      "$ref": "common#/definitions/meta"
    },
    "username": {
      "$ref": "common#/definitions/owner"
    },
    "access": {
      "type": "object",
      "required": ["setPublic"],
      "properties": {
        "setPublic": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}