{
  "type": "object",
  "required": ["id", "size", "format"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "size": {
      "type": "object",
      "additionalProperties": false,
      "required": ["width", "height"],
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        }
      }
    },
    "format": {
      "type": "string",
      "enum": ["jpeg","png","webp"]
    }
  }
}